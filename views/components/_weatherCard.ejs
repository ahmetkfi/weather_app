<div class="w-1/3 rounded-md text-white text-mono bg-black flex items-center shadow-2xl  mx-auto mt-20 flex-col justify-between">
    
    <div class="mb-3">
        <% switch (condition) {
            case 'Clouds': %>
          <img alt="partly cloudy" src="images/clouds.png">
          <% break;
            case 'Clear' : %>
            <img alt="sunny" src="images/clear.png">
            <%break;
            case 'Rain' : %>
            <img alt="sunny" src="images/rain.png">
            <%break;
            case 'Drizzle' : %>
            <img alt="ligt rain" src="images/drizzle.png"> 
            <%break;
                case 'Mist' : %>
                <img alt="overcast" src="images/mist.png">
            <%break
            default:
            break; } %>
    </div>
    
    <div class="mb-3">
        <h2 class="text-6xl font-mono"><%= temp_c %>Â°C</h2>
    </div>

    <div class="mb-3 text-center">
        <h1 class="text-4xl font-mono"><%= city_name %></h1>
        <p class="text-xl text-gray-500"><%= country %></p>
    </div>
    <div class="w-full flex flex-row justify-between p-8">
        <div class="flex flex-row justify-between">
            <img alt="humidity" src="images/humidity.png" width="60" height="60">
            <div class="flex flex-col ml-4">
                <h1 class="text-xl"><%= humidity %> %</h1>
                <h1 class="text-xl">Humidity</h1>
            </div>
        </div>
        <div class="flex flex-row justify-between">
            <img alt="wind" src="images/wind.png" width="60" height="60">
            <div class="flex flex-col ml-4">
                <h1 class="text-xl"><%= wind_mph %> km/h</h1>
                <h1 class="text-xl">Wind Speed</h1>
            </div>
        </div>
    </div>
</div>

